{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc.o",
            "type": "shell",
            "command": "gcc",
            "args": ["-c","${fileBasename}", "-std=c99", "-L."],
            "options": {"cwd": "${fileDirname}"},
            "group": "test",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "arlink",
            "type": "shell",
            "command": "ar",
            "args": ["crsv", "lib${fileBasenameNoExtension}.a", "${fileBasenameNoExtension}.o"],
            "options": {"cwd": "${fileDirname}"},
            "group": "test",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "ldconfig",
            "type": "shell",
            "command": "sudo ldconfig ${fileDirname} | rm -f ${fileBasenameNoExtension}.o",
            "args": [],
            "options": {"cwd": "${fileDirname}"},
            "group": "test",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            }
        },
        {
            "label": "C compile",
            "type": "shell",
            "command": "gcc",
            "args": ["-ggdb", "-std=c99", "-L.", "${fileBasename}", "hash.c"],
            "options": {"cwd": "${fileDirname}"},
            "group": "test",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "."],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5},
                }
        },
        {
            "label": "make",
            "dependsOn": ["gcc.o", "arlink", "ldconfig"]
        }
    ]
}